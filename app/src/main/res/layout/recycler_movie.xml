<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:background="@drawable/recycler_row_shape">


    <ImageView
        android:id="@+id/poster"
        android:layout_width="200dp"
        android:layout_height="250dp" />


    <ImageView
        android:id="@+id/favoriteImage"
        android:layout_marginTop="20dp"
        android:src="@drawable/favourites_empty"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/rating"
        android:layout_marginTop="5dp"
        android:src="@drawable/rate_empty"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/favoriteImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/watchList"
        android:layout_marginTop="5dp"
        android:src="@drawable/watchlist_add"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/White"
        android:layout_below="@+id/poster"
        android:layout_toRightOf="@id/favoriteImage"
        android:text="The Godfather"
        android:id="@+id/textMovieTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/White"
        android:layout_below="@+id/textMovieTitle"
        android:layout_toRightOf="@id/rating"
        android:text="The Godfather"
        android:id="@+id/textRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/White"
        android:layout_below="@+id/textRating"
        android:layout_toRightOf="@id/rating"
        android:text="The Godfather"
        android:id="@+id/textWatching"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />





</RelativeLayout>